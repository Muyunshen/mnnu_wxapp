.page {
  padding-top: 1rpx
}

.index {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.logo_1 {
  position: fixed;
  bottom: 10vh;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  width: 140rpx;
  height: 140rpx;
  z-index: -1;
}

.logo_2 {
  position: fixed;
  bottom: 3vh;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  width: 346rpx;
  height: 86rpx;
  z-index: -1;
}

.card {
  margin-right: 50rpx;
  margin-left: 50rpx;
  height: 65vh;
  margin-top: 150rpx;
  border-radius: 40rpx;
  backdrop-filter: saturate(130%) blur(20px);
  -webkit-backdrop-filter: saturate(130%) blur(20px);
  z-index: 9;
  box-shadow: 0 2px 10px 0 rgba(150, 152, 187, 0.37);
  border: 1px solid rgb(255, 255, 255);
  background: rgba(255, 255, 255, 0.4);
}

.txt {
  margin-top: 50rpx;
  z-index: 9999 !important;
}

.txt li {
  display: block;
  font-size: larger;
  font-weight: bolder;
  text-align: center;
  margin: 50rpx auto;
}

.index_1 {
  position: absolute;
  bottom: 0rpx;
  left: -2rpx;
  width: 649rpx;
  height: 800rpx;
  border-radius: 40rpx;
  z-index: -1;
}

.index_2 {
  position: absolute;
  bottom: 256rpx;
  left: 120rpx;
  width: 600rpx;
  height: 600rpx;
  z-index: -1;
}

.btn {
  padding: 0;
  position: absolute;
  bottom: 28%;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
  width: 350rpx !important;
  height: 100rpx;
  line-height: 100rpx;
  font-size: larger;
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
  border-radius: 10px;
  box-shadow: 0 2px 10px 0 rgba(150, 152, 187, 0.37);
  background: rgba(255, 255, 255, 0.4);
}

button::after {
  border: 0;
  padding: 0;
}
.design {
  position: absolute;
  font-size: x-small;
  color: white;
  left: 40%;
  bottom: 1%;
}