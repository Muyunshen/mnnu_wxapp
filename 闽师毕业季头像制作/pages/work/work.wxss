page {
  background-color: white;
}

.page {
  padding-top: 1rpx;
}

.title {
  font-size: x-large;
  font-weight: bolder;
  position: fixed;
  top: 100rpx;
  left: 50rpx;
}

.glass {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 0;
  box-shadow: 0 2px 10px 0 rgba(150, 152, 187, 0.37);
  border: 1px solid rgb(255, 255, 255);
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: saturate(180%) blur(15px);
  -webkit-backdrop-filter: saturate(180%) blur(15px);
}

.index {
  width: 100%;
  height: 100%;
  position: fixed;
  background-size: 100% 100%;
  z-index: -1;
}

.card {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80%;
  border-radius: 80rpx 80rpx 0 0;
  box-shadow: 0 2px 10px 0 rgba(150, 152, 187, 0.37);
  border: 1px solid rgb(255, 255, 255);
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: saturate(180%) blur(15px);
  -webkit-backdrop-filter: saturate(180%) blur(15px);
}

.card_top {
  position: relative;
  height: 400rpx;
  width: 400rpx;
  margin: 100rpx auto;
  border-radius: 50rpx;
}

.card_button {
  position: fixed;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: wrap;
  bottom: 0;
  width: 100%;
  height: 15%;
  border-radius: 80rpx 80rpx 0 0;
  box-shadow: 0 2px 10px 0 rgba(150, 152, 187, 0.37);
  border: 1px solid rgb(255, 255, 255);
  background: rgba(255, 255, 255, 0.4);
  backdrop-filter: saturate(180%) blur(20px);
  -webkit-backdrop-filter: saturate(180%) blur(20px);
}

.avatar {
  position: absolute;
  top: 45rpx;
  left: 45rpx;
  width: 78%;
  height: 78%;
  border-radius: 50%;
  z-index: -1;
}

.back_avatar {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 400rpx;
  height: 400rpx;
}

.btn {
  width: 70rpx;
  align-items: center;
  justify-content: space-around;
  display: flex;
  height: 70rpx;
  border-radius: 50%;
  border-style: solid;
  border-color: #d1cbf2;
  border-width: 6rpx;
}

.img_btn {
  width: 70%;
  height: 70%;
}

.line_1 {
  position: fixed;
  bottom: 8%;
  left: 180rpx;
  width: 140rpx;
  height: 0;
  border: 1rpx dashed #999999;
  color: #999999;
}

.text {
  position: fixed;
  bottom: 9%;
  left: 32%;
  font-size: small;
  font-weight: initial;
  color: #999999;
}

.line_2 {
  position: fixed;
  bottom: 8%;
  right: 24%;
  font-size: xx-small;
  font-weight: initial;
  color: #999999;
  width: 140rpx;
  height: 0;
  border: 1rpx solid #999999;
}

.title_1 {
  position: fixed;
  bottom: 1%;
  left: 11%;
  color: #999999;
  font-size: small;
}

.title_2 {
  position: fixed;
  bottom: 1%;
  left: 44%;
  color: #999999;
  font-size: small;
}

.title_3 {
  position: fixed;
  bottom: 1%;
  left: 77%;
  color: #999999;
  font-size: small;
}

.bg {
  display: flex;
  justify-content: center;
}

.bg {
  position: absolute;
  bottom: 0;
  margin-left: 50rpx;
  width: 700rpx;
  height: 700rpx;

}

.txt {
  margin-top: 50rpx;
  z-index: 9999 !important;
  margin-bottom: 50rpx;
}

.txt li {
  display: block;
  font-size: larger;
  font-weight: bolder;
  text-align: center;
  margin: 50rpx auto;
}

.img {
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  top: -10%;
  right: 4%;
  z-index: -1;
}

.design {
  position: absolute;
  font-size: x-small;
  color: #999999;
  left: 40%;
  top: 82%;
}